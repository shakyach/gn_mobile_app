<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#10171f" >

    <Button
        android:id="@+id/header_left_btn"
        android:layout_width="40dp"
        android:layout_height="32dp"
        android:textColor="#000000"
        android:background="@drawable/scorecard_ladpi"
        android:layout_marginBottom="2dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="left|center"
        android:singleLine="false"
        android:textSize="17dp"
        android:textStyle="bold"
        android:layout_marginBottom="3dp"
        android:layout_weight="0.29"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="30dp"
        android:text="GolfCourseName"
        android:id="@+id/idGolfCourseName"
        android:textColor="#ffffff"
        android:layout_marginTop="13dp" />

    <Button
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/zoomin_map"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/search"
        android:visibility="gone" />

    <Button
        android:id="@+id/header_right_btn"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:textColor="#000000"
        android:layout_marginBottom="2dp"
        android:layout_marginRight="10dp"
        android:background="#10171f"
        android:visibility="gone" />

    <Button
        android:layout_width="28dp"
        android:layout_height="17dp"
        android:id="@+id/menubuttonSR"
        android:background="@drawable/menubutton"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="10dp"
        android:visibility="visible" />

</LinearLayout>
