<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="2dp"
        android:background="#ebedf1">

        <Button
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:id="@+id/ClubOnOff"
            android:layout_gravity="center"
            android:gravity="center_vertical"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="@drawable/thumboff"
            android:layout_marginBottom="4dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/Clubtypetext"
            android:layout_gravity="center_vertical"
            android:textColor="#10171f"
            android:textSize="17dp"
            android:layout_alignTop="@+id/textclubdist"
            android:layout_toRightOf="@+id/ClubOnOff"
            android:layout_toEndOf="@+id/ClubOnOff"
            android:layout_marginLeft="10dp"
            android:fontFamily="font/Roboto-Regular_0.ttf" />

        <Button
            android:layout_width="14dp"
            android:layout_height="22dp"
            android:id="@+id/setdistclub"
            android:layout_alignTop="@+id/ClubOnOff"
            android:layout_alignParentRight="true"
            android:layout_gravity="center_vertical"
            android:layout_alignParentEnd="true"
            android:background="@drawable/rightarrow"
            android:layout_marginRight="10dp"
            android:layout_marginTop="3dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/textclubdist"
            android:layout_alignBottom="@+id/setdistclub"
            android:layout_toLeftOf="@+id/setdistclub"
            android:layout_toStartOf="@+id/setdistclub"
            android:layout_marginRight="15dp"
            android:textColor="#10171f"
            android:textSize="17dp"
            android:layout_marginTop="3dp"
            android:fontFamily="font/Roboto-Regular_0.ttf" />

    </RelativeLayout>
</RelativeLayout>
