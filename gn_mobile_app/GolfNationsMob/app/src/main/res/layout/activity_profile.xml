<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.golfnationsmob.GolfView.NewRound.Profile"
    android:background="#ffffff">



    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:weightSum="2"
        android:background="#10171f">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="CANCEL"
            android:id="@+id/d2"
            android:background="#10171f"
            android:textColor="#ffffff"

            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textSize="15dp"
            android:textStyle="bold"
            android:layout_weight="1"
            android:layout_gravity="left|bottom"
            android:textAlignment="center"
            android:layout_marginRight="140dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="SAVE"
            android:id="@+id/idprofilesave"
            android:layout_alignTop="@+id/d2"
            android:layout_toRightOf="@+id/d2"
            android:layout_toEndOf="@+id/d2"
            android:background="#10171f"
            android:textColor="#ffffff"
            android:textSize="15dp"
            android:textStyle="bold"
            android:layout_weight="1"
            android:textAlignment="center" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView11"
        android:layout_marginBottom="55dp"
        android:gravity="center_horizontal"

        android:layout_marginTop="20dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <FrameLayout
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:id="@+id/frameLayout"
                android:layout_gravity="center_horizontal">

                <ImageView
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:id="@+id/idprofilepicED"
                    android:layout_gravity="center"
                    android:background="@drawable/profile_default" />

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/idcamerapic"
                    android:layout_gravity="right|bottom"
                    android:background="@drawable/icon_camera"
                    android:layout_marginRight="2dp"
                    android:layout_marginBottom="5dp" />
            </FrameLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@android:color/transparent"
                android:focusable="true"
                android:focusableInTouchMode="true">
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Stats Unknow"
                android:id="@+id/idstats"
                android:layout_below="@+id/frameLayout"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="2dp"
                android:textColor="#a5a6a8"
                android:layout_gravity="center" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_below="@+id/idstats"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="20dp"
                android:background="#ebedf1"
                android:id="@+id/linprofile1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:text="FIRST NAME"
                    android:id="@+id/idfirstname"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="15dp"
                    android:textColor="#939fad"
                    android:textSize="12dp" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:id="@+id/editfirstname"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical"
                    android:background="#ebedf1"
                    android:layout_marginLeft="30dp"
                    android:textColor="#10171f"
                    android:textSize="12dp"
                    android:inputType="textPersonName"
                    android:focusableInTouchMode="true" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_below="@+id/linprofile1"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="2dp"
                android:background="#ebedf1"
                android:id="@+id/linprofile2">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:text="LAST NAME"
                    android:id="@+id/idlastname"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="15dp"
                    android:textColor="#939fad"
                    android:textSize="12dp" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:id="@+id/editlastname"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical"
                    android:background="#ebedf1"
                    android:layout_marginLeft="30dp"
                    android:textSize="12dp"
                    android:inputType="textPersonName" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_below="@+id/linprofile2"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="2dp"
                android:background="#ebedf1"
                android:id="@+id/linprofile3"
                android:visibility="visible">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:text="EMAIL"
                    android:id="@+id/idemail"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="15dp"
                    android:textColor="#939fad"
                    android:textSize="12dp" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:id="@+id/editemail1"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical"
                    android:background="#ebedf1"
                    android:layout_marginLeft="60dp"
                    android:textSize="12dp"
                    android:inputType="textWebEmailAddress" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="Do you have USGA Handicap?"
                android:id="@+id/idusgatext"
                android:layout_below="@+id/linprofile3"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="25dp"
                android:textSize="20dp"
                android:textColor="#7c8d9e"
                android:visibility="visible" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_below="@+id/idusgatext"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:background="#ebedf1"
                android:id="@+id/linprofile4"
                android:visibility="visible">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:text="GHIN#"
                    android:id="@+id/idghin"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="15dp"
                    android:textColor="#939fad"
                    android:textSize="12dp" />

                <EditText
                    android:layout_width="120dp"
                    android:layout_height="25dp"
                    android:id="@+id/editghin"
                    android:layout_gravity="center_vertical"
                    android:background="#ebedf1"
                    android:layout_marginLeft="70dp"
                    android:textSize="12dp"
                    android:inputType="textPersonName" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="right">

                    <Button
                        style="?android:attr/buttonStyleSmall"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:id="@+id/button3"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/help"
                        android:layout_marginTop="2dp"
                        android:layout_marginRight="20dp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_below="@+id/linprofile4"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:background="#ebedf1"
                android:layout_marginTop="4dp"
                android:id="@+id/linprofile5"
                android:visibility="visible">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:text="STATE"
                    android:id="@+id/idstate"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="15dp"
                    android:textColor="#939fad"
                    android:textSize="12dp" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:id="@+id/editstate"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical"
                    android:background="#ebedf1"
                    android:layout_marginLeft="70dp"
                    android:textSize="12dp"
                    android:inputType="textPersonName" />
            </LinearLayout>

            <RelativeLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="40dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Don&apos;t have a handicap?"
                    android:id="@+id/idusgatext1"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="false"
                    android:textAlignment="center"
                    android:textColor="#a8b3be"
                    android:textSize="14dp"
                    android:layout_gravity="center"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="40dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sign up today"
                    android:id="@+id/idusgatext2"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:textColor="#1eaae2"
                    android:textSize="14dp"
                    android:layout_toEndOf="@id/idusgatext1"
                    android:layout_toRightOf="@id/idusgatext1"
                    android:paddingLeft="8dp"
                    android:layout_marginRight="40dp" />
            </RelativeLayout>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>
